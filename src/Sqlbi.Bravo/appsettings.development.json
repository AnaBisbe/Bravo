{
  "Serilog": {
    "Using": [
      "Sqlbi.Bravo",
      "Serilog.Sinks.Debug",
      "Serilog.Settings.Configuration",
      "Serilog.Filters.Expressions"
    ],
    "MinimumLevel": "Verbose",
    "WriteTo": [
      {
        "Name": "Debug",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level}] {SourceContext}.{CallerMemberName}({EventId}|{ManagedThread}) - {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level}] {SourceContext}.{CallerMemberName}({EventId}|{ManagedThread}) - {Message:lj}{NewLine}{Exception}",
                  "path": "%LOCALAPPDATA%\\SqlbiBravo\\log-bravo.txt",
                  "restrictedToMinimumLevel": "Information"
                }
              }
            ]
          }
        }
      },
      {
        "Name": "File",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level}] {SourceContext}.{CallerMemberName}({EventId}|{ManagedThread}) - {Message:lj}{NewLine}{Exception}",
          "path": "%LOCALAPPDATA%\\SqlbiBravo\\log-full.txt"
        }
      }
    ],
    "Enrich": [
      "WithManagedThread",
      "FromLogContext"
    ]
  }
}